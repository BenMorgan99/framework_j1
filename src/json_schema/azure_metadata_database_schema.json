{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "$schema": {
        "type": "string",
        "enum": ["http://json-schema.org/draft-07/schema#", "../src/json_schema/azure_metadata_database_schema.json"]
      },
      "name": {
        "type": "string",
        "minLength": 1
      },
      "properties": {
        "type": "object",
        "properties": {
          "annotations": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "type": {
            "type": "string",
            "enum": ["AzureSqlDatabase"]
          },
          "typeProperties": {
            "type": "object",
            "properties": {
              "server": {
                "type": "string",
                "minLength": 1
              },
              "database": {
                "type": "string",
                "minLength": 1
              },
              "encrypt": {
                "type": "string",
                "enum": ["mandatory", "optional"]
              },
              "trustServerCertificate": {
                "type": "boolean"
              },
              "authenticationType": {
                "type": "string",
                "enum": ["SQL", "Windows"]
              },
              "userName": {
                "type": "string",
                "minLength": 1
              },
              "password": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["AzureKeyVaultSecret"]
                  },
                  "store": {
                    "type": "object",
                    "properties": {
                      "referenceName": {
                        "type": "string",
                        "minLength": 1
                      },
                      "type": {
                        "type": "string",
                        "enum": ["LinkedServiceReference"]
                      }
                    },
                    "required": ["referenceName", "type"]
                  },
                  "secretName": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": ["type", "store", "secretName"]
              }
            },
            "required": ["server", "database", "encrypt", "trustServerCertificate", "authenticationType", "userName", "password"]
          }
        },
        "required": ["annotations", "type", "typeProperties"]
      }
    },
    "required": ["$schema", "name", "properties"],
    "additionalProperties": false
  }
  